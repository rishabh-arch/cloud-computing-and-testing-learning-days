    title Concept - Bootstrap 4 Admin Dashboard Template
block style
    //- link(rel="stylesheet" type="text/css" href="https://bootswatch.com/4/united/bootstrap.min.css")
    style
        include ../static/login.css
block scripts
    //- script(src="../static/tablefilter.js")
block content
    .splash-container
        .card
            .card-header.text-center
                span Scorpiotic
                span.splash-description Please enter your New Password.
            |             
            .card-body
                form(method="post" action=`/newPassword/${token}`)
                    p We told You Don't Worry
                    p #{message}
                    |                     
                    .form-group
                        input.form-control.form-control-lg(type='password', name='password', required='', placeholder='New Password', autocomplete='off')
                    .form-group
                        input.form-control.form-control-lg(type='password', name='confirmpassword', required='', placeholder='Confirm New Password', autocomplete='off')
                    |                     
                    .form-group.pt-1
                        button.btn.btn-block.btn-primary.btn-xl(type="submit") Reset Password
                        | #{err}
            |             
            .card-footer.text-center
                span
                    | Don&apos;t have an account? 
                    a(href='/register') Sign Up
    // ==============================================================
    // end forgot password
    // ==============================================================
    // Optional JavaScript
    script(src='../assets/vendor/jquery/jquery-3.3.1.min.js')
    |     
    script(src='../assets/vendor/bootstrap/js/bootstrap.bundle.js')


