extends base.pug
block heads
    title Concept - login
    link(rel='stylesheet', href='../static/assets/vendor/bootstrap/css/bootstrap.min.css')
    |     
    //- link(href='../static/assets/vendor/fonts/circular-std/style.css', rel='stylesheet')
    //- |     
    link(rel='stylesheet', href='../static/assets/libs/css/style.css')
    |     
    link(rel='stylesheet', href='../static/assets/vendor/fonts/fontawesome/css/fontawesome-all.css')
block style
    //- link(rel="stylesheet" type="text/css" href="https://bootswatch.com/4/united/bootstrap.min.css")
    style
        include ../static/login.css
block scripts
    //- script(src="../static/tablefilter.js")
block content
    .splash-container
        .card
            .card-header.text-center
                a(href='/home')
                    span DOT MATRIX
                span.splash-description Please enter your user information.
            |             
            .card-body
                form(action='/login' method='POST')
                    if(success_message != '')
                        .alert
                            button.close(type='button' data-dismiss='alert') &times;
                            strong #{success_message}
                    if( error != '')
                        .alert
                            button.close(type='button' data-dismiss='alert') &times;
                            strong #{error}
                    .form-group
                        input#username.form-control.form-control-lg(type='email', name="email" placeholder='E-mail', autocomplete='off')
                    |                     
                    .form-group
                        input#password.form-control.form-control-lg(type='password',name="password" placeholder='Password')
                    |                     
                    button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign in
            |             
            .card-footer.bg-white.p-0
                .card-footer-item.card-footer-item-bordered
                    a.footer-link(href='/auth/facebook') Facebook
                .card-footer-item.card-footer-item-bordered
                    a.footer-link(href='/register') Create An Account
                |                 
                .card-footer-item.card-footer-item-bordered
                    a.footer-link(href='/forgotpassword') Forgot Password
    // ==============================================================
    // end login page
    // ==============================================================
    // Optional JavaScript
    script(src='../static/assets/vendor/jquery/jquery-3.3.1.min.js')
    |     
    script(src='../static/assets/vendor/bootstrap/js/bootstrap.bundle.js')


