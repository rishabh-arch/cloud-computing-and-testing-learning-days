                //- .form-group
                //-     input#phone.form-control.form-control-lg(type='text' name='phone' autocomplete='off' placeholder="phone Number")
                .form-group.pt-2
                    button.btn.btn-block.btn-primary(type='submit') Register My Account
                |                 
                .form-group
                    label.custom-control.custom-checkbox
                        input.custom-control-input(type='checkbox' name="TnC_check" value="check")
                        span.custom-control-label
                            | By creating an account, you agree the 
                            a(href='#') terms and conditions
                |                 
