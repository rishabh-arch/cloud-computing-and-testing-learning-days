block content
    .splash-container
        .card
            .card-header.text-center
                img.logo-img(src='../static/assets/images/logo.png', alt='logo')
                span.splash-description Please enter your user information.
            |             
            .card-body
                form(method="post" action="/userNewpassword")
                    p Don&apos;t worry, we&apos;ll send you an email to reset your password.
                    |                     
                    .form-group
                        input.form-control.form-control-lg(type='email', name='user_email', required='', placeholder='Your Email', autocomplete='off')
                    |                     
                    .form-group.pt-1
                        button.btn.btn-block.btn-primary.btn-xl(type="submit") Reset Password
                        | #{message}
            |             
            .card-footer.text-center
                span
                    | Don&apos;t have an account? 
                    a(href='/register') Sign Up
